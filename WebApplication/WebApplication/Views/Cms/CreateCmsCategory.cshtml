@model WebApplication.Models.ViewModels.CmsCategoryCreateView

@{
    ViewBag.Title = WebApplication.Common.Constants.PageTitle.CmsCategory.Create;
}

<h2>@WebApplication.Common.Constants.PageTitle.CmsCategory.Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (Model.ParentID != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.CmsCategory.ParentID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox(WebApplication.Common.Constants.ModelName.CmsCategory.ParentTitle, Model.ParentTitle, new { @readonly = "readonly", @class = "form-control" })
                    @Html.HiddenFor(model => model.CmsCategory.ParentID, new { Value = (int)Model.ParentID })
                </div>
            </div>
        }
        
        <div class="form-group">
            @Html.LabelFor(model => model.CmsCategory.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CmsCategory.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CmsCategory.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CmsCategory.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CmsCategory.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(WebApplication.Common.Constants.PageTitle.CmsCategory.Index, WebApplication.Common.Constants.RouteName.CmsCategoryAction.Index)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ckeditor")
    @*<script>
        $(document).ready(function () {
            CKEDITOR.replace('CmsCategory.Description');
        });
    </script>*@
}
