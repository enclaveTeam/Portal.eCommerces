@model WebApplication.Models.Models.cms_Categories
@using WebApplication.Common.Constants

<div>
    <h4>@PageTitle.CmsCategory.Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GUID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GUID)
        </dd>
        @if(Model.ParentID != Guid.Empty)
        {
            <dt>
                @Html.DisplayNameFor(model => model.ParentID)
            </dt>

            <dd>
                @((string)ViewBag.ParentTitle) (@Html.DisplayNameFor(model => model.GUID): @Html.DisplayFor(model => model.ParentID))
            </dd>
        }
       
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            <button id="btn_expand" data-true="Collapse" data-false="Expand" class="btn btn-default">Expand</button>
            <div id="html_raw">
                @Html.Raw(Model.Description)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Url)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Url)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SortOrder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SortOrder)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(Label.CRUD.Edit, RouteName.CmsCategory.Edit, new { id = Model.ID }) |
    @Html.ActionLink(WebApplication.Common.Constants.PageTitle.CmsCategory.Index, WebApplication.Common.Constants.RouteName.CmsCategory.Index)
</p>

@section styles {
    <style>
        #html_raw{
            display:none;
        }
    </style>
    
}

@section scripts{
    <script>
        $(document).ready(function () {
            $('#btn_expand').click(function () {
                $('#html_raw').toggle(0, function () {
                    $('#btn_expand').html($('#btn_expand').attr('data-' + $(this).is(':visible')));
                });
            });
        })
    </script>
}