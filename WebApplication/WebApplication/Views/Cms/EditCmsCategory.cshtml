@model WebApplication.Models.ViewModels.CmsCategoryEditView
@using WebApplication.Common.Constants;

<h2>@PageTitle.CmsCategory.Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CmsCategory.ID)
        @Html.HiddenFor(model => model.CmsCategory.GUID)
        @Html.HiddenFor(model => model.CmsCategory.Url)
        @Html.HiddenFor(model => model.CmsCategory.SortOrder)
        @Html.HiddenFor(model => model.CmsCategory.Status)
        @Html.HiddenFor(model => model.CmsCategory.CreatedBy)
        @Html.HiddenFor(model => model.CmsCategory.CreatedDate)
        
        <div class="form-group">
            @Html.LabelFor(model => model.CmsCategory.ParentID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CmsCategory.ParentID, Model.Parents, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CmsCategory.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CmsCategory.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CmsCategory.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CmsCategory.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CmsCategory.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CmsCategory.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Label.CmsCategory.CreateSubCategory, RouteName.CmsCategory.Create, new { parentID = Model.CmsCategory.ID }) |
    @Html.ActionLink(WebApplication.Common.Constants.PageTitle.CmsCategory.Index, WebApplication.Common.Constants.RouteName.CmsCategory.Index)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ckeditor")
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('CmsCategory.Description');
        });
    </script>
}
