@model WebApplication.Models.Models.product_Products

@{
    ViewBag.Title = "Xóa sản phẩm";
}

<h2>Xóa sản phẩm </h2>

<h3>Bạn có muốn xóa sản phẩm này?</h3>
<div>
    <h4>Thông tin sản phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Unit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unit)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PriceOfUnit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PriceOfUnit)
        </dd>

        @if (Model.share_Images.Any())
        {
            <dt>
                Hình sản phẩm
            </dt>
            <dd>
                <img src="@Model.share_Images.First().ImagePath" height="70" width="70" alt="ảnh không tồn tại" />
            </dd>
        }

        <dd>
            @Html.DisplayFor(model => model.CoverImageID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description2)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description2)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalView)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalView)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalBuy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalBuy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tags)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tags)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsNewProduct)
        </dt>

        @{
            bool IsNew = Model.IsNewProduct == null ? false : (bool)Model.IsNewProduct;
            <dd>
                @Html.CheckBox("Is new Product?", IsNew, htmlAttributes: new { @disabled = true })
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.IsBestSellProduct)
        </dt>
      
        @{
            bool IsBestSell = Model.IsBestSellProduct == null ? false : (bool)Model.IsBestSellProduct;
            <dd>
                @Html.CheckBox("Is best sell Product?", IsBestSell, htmlAttributes: new { @disabled = true })
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.SortOrder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SortOrder)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        @{
            <dd>
                @*@Html.DisplayFor(model => model.Status)*@
                WebApplication.Admin.BusinessLogic.StatusProductViewModels.GetValueOfStatus(Model.Status);
            </dd>
        }
       
        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.product_Categories.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_Categories.Title)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>
